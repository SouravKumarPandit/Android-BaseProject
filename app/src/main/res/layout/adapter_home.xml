<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="homeOption"
            type="com.vrlocal.android.baseproject.ui.screens.home.data.HomeOption" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOptionCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.vrlocal.android.baseproject.util.viewutils.fontutils.IconView
                    android:id="@+id/iconService"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:shadowColor="#C5DFB9"
                    android:shadowDx="-10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="@{homeOption.iconRes}"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_35sdp">

                </com.vrlocal.android.baseproject.util.viewutils.fontutils.IconView>

                <TextView
                    android:id="@+id/tvItemLabel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="top|center"
                    android:text="@{homeOption.label}"
                    android:textAllCaps="true"
                    android:textStyle="bold">


                </TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>